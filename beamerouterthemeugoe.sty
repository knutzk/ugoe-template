\defbeamertemplate*{frametitle}{ugoe}[1][]
{
  \begin{beamercolorbox}[wd=\paperwidth]{frametitle}
    \begin{tikzpicture}
      \useasboundingbox[fill=white](0,0) rectangle(\the\paperwidth,1.2);

      \draw (\the\paperwidth, 1.2) ++(-0.1, 0.1) coordinate(logo ne);
      \node at (logo ne) [anchor=north east] {
          \includegraphics[width=5cm]{logos/logo-uni-goe.pdf}
        };
      \draw [line width=0.2mm] (\the\paperwidth, 0.0) ++ (-0.25, 0) -- (0.25,0);
      \ifx\insertframesubtitle\empty
        \node at (0.25,0.6) [anchor=west, text width=7.2cm] {\insertframetitle};
      \else
        \node at (0.25,0.6) [anchor=base west, text width=7.2cm] {\insertframetitle};
        \node at (0.25,0.1) [anchor=base west, text width=7.2cm] {\usebeamerfont{framesubtitle}\insertframesubtitle};
      \fi
    \end{tikzpicture}
  \end{beamercolorbox}
}

\defbeamertemplate*{footline}{ugoe}
{
  \leavevmode%
  \hbox{%
    \begin{beamercolorbox}[wd=.25\paperwidth,ht=2.25ex,dp=1ex,center]{author in head/foot}%
    \end{beamercolorbox}%
    \ifnum\thepage>1%
      \begin{beamercolorbox}[wd=.5\paperwidth,ht=2.25ex,dp=1ex,center]{author in head/foot}%
        \usebeamerfont{author in head/foot}\insertshortauthor
      \end{beamercolorbox}%
      \begin{beamercolorbox}[wd=.25\paperwidth,ht=2.25ex,dp=1ex,right]{page in head/foot}%
        \usebeamerfont{page in head/foot} \insertframenumber{} / \inserttotalframenumber\hspace*{2ex}
      \end{beamercolorbox}%
    \fi%
  }%
  \vskip0pt%
}
